<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="transactionHandling.TransactionController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <Label text="Transaction Type:" />
         <ComboBox fx:id="transactionTypeComboBox" onAction="#handleTransactionTypeChange" />
         <Label text="Billing Type:" />
         <ComboBox fx:id="billingTypeComboBox" onAction="#handleBillingTypeChange" />
         <Label text="Date:" />
         <DatePicker fx:id="datePicker" onAction="#handleDateChange" />
         <Button text="Add Transaction" fx:id="addTransactionButton" onAction="#handleAddTransaction" />
      </HBox>
   </top>

   <center>
      <TableView fx:id="transactionTableView">
         <columns>
            <TableColumn prefWidth="100.0" text="Amount" fx:id="amountColumn"/>
            <TableColumn prefWidth="150.0" text="Transaction Type" fx:id="transactionTypeColumn" />
            <TableColumn prefWidth="150.0" text="Billing Type" fx:id="billingTypeColumn"/>
            <TableColumn prefWidth="100.0" text="Date" fx:id="dateColumn"/>
            <TableColumn prefWidth="150.0" text="Transaction ID" fx:id="transactionIdColumn"/>
            <TableColumn prefWidth="150.0" text="Description" fx:id="descriptionColumn"/>
            <TableColumn prefWidth="150.0" text="Place" fx:id="placeColumn"/>
            <TableColumn fx:id="actionColumn" prefWidth="150.0" text="Actions" />
         </columns>
      </TableView>
   </center>

   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10" left="10" right="10" top="10" />
         </padding>
         <Label text="Total Income:" />
         <TextField fx:id="totalIncomeField" editable="false" />
         <Label text="Total Expenses:" />
         <TextField fx:id="totalExpensesField" editable="false" />
         <Label text="Balance:" />
         <TextField fx:id="balanceField" editable="false" />
      </HBox>
   </bottom>
</BorderPane>